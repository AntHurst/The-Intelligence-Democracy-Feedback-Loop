CREATE OR REPLACE TABLE `coastal-volt-472401-e3.analysis_master_dataset.master_panel_ts_with_pol` AS
WITH politicization AS (
  SELECT 2008 AS Year, 1 AS politicization_index UNION ALL
  SELECT 2009, 0 UNION ALL
  SELECT 2010, 0 UNION ALL
  SELECT 2011, 0 UNION ALL
  SELECT 2012, 0 UNION ALL
  SELECT 2013, 2 UNION ALL
  SELECT 2014, 1 UNION ALL
  SELECT 2015, 2 UNION ALL
  SELECT 2016, 2 UNION ALL
  SELECT 2017, 2 UNION ALL
  SELECT 2018, 2 UNION ALL
  SELECT 2019, 2 UNION ALL
  SELECT 2020, 2 UNION ALL
  SELECT 2021, 1 UNION ALL
  SELECT 2022, 1 UNION ALL
  SELECT 2023, 2 UNION ALL
  SELECT 2024, 2
)
SELECT
  t.*,
  p.politicization_index
FROM
  `coastal-volt-472401-e3.analysis_master_dataset.master_panel_ts` AS t
LEFT JOIN
  politicization AS p
USING (Year)
ORDER BY
  Year;
